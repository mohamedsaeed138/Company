@model List<Project>
@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Projects </h1>
<h5 class="text-center" style="font-family: Arial !important;color:rgba(0,0,0,.76)">@ViewBag.GroupTitle</h5>
<a class="btn btn-success float-end" asp-controller="Project" asp-action="Create"> Create</a>

<br />
<br />
<table class="table   table-hover text-center">
    <thead style="color:white;background-color:#332ca9;">
        <tr>
            <th>Number</th>
            <th>Name</th>
            <th>Department</th>
            <th>Location</th>
            <th>Employees</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr class="table-light" id="@item.Number">
            <td>@item.Number</td>
            <td>@item.Name</td>
            <td><a href="/Department/Index#@item.DNum">@item.Department?.Name</a></td>
            <td>@item.Location</td>
            <td>@Html.ActionLink("Employees","Employees","Project",new {number=item.Number})</td>
            <td>@Html.ActionLink("Update","Update","Project",new {number=item.Number},new {@class="btn btn-primary"})</td>
            <td>@Html.ActionLink("Delete","Delete","Project",new {number=item.Number},new {@class="btn btn-danger"})</td>
        </tr>
    }
</table>

